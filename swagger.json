                },
                "bio": {
                  "type": "string",
                  "example": "kim is the best"
                },
                "musicGenre": {
                  "type": "string",
                  "example": "metal"
                },
                "appleMusicAddress": {
                  "type": "string",
                  "example": "https://example.com/"
